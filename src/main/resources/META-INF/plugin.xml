<idea-plugin>
    <id>net.fedustria.reactcomponentcreator</id>
    <name>React Component Generator</name>
    <vendor email="f3dox@proton.me" url="https://fedox.ovh">Fedox</vendor>
    <description>Create an entire component structure with a component file, an external CSS file and an index.ts that exports the component directly by clicking a button.</description>
    <version>1.0</version>
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="net.fedustria.reactcomponentcreator.actions.CreateReactComponentAction"
                class="net.fedustria.reactcomponentcreator.actions.CreateReactComponentAction" text="React Component"
                description="Create a new react component"
                icon="Icons.react_icon">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>